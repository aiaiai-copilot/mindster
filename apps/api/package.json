{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --env-file=../../.env run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun --env-file=../../.env run dist/index.js",
    "test": "bun --env-file=../../.env vitest run",
    "test:unit": "bun --env-file=../../.env vitest run --dir src",
    "test:int": "bun --env-file=../../.env vitest run --dir tests",
    "test:watch": "bun --env-file=../../.env vitest watch",
    "lint": "echo 'No linter configured yet'",
    "typecheck": "tsc --noEmit",
    "db:generate": "bun --env-file=../../.env drizzle-kit generate",
    "db:migrate": "bun --env-file=../../.env run src/shared/db/migrate.ts",
    "db:push": "bun --env-file=../../.env drizzle-kit push",
    "db:studio": "bun --env-file=../../.env drizzle-kit studio"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/sensible": "^6.0.3",
    "@mindster/shared": "workspace:*",
    "@node-rs/argon2": "^2.0.2",
    "drizzle-orm": "^0.38.3",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.1.0",
    "jose": "^6.1.3",
    "postgres": "^3.4.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "bun-types": "^1.1.42",
    "drizzle-kit": "^0.30.1",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
